<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:background="#336666"
    >

    <TextView
        android:id="@+id/usernametext"
        android:layout_marginTop="250dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Name: "
        android:textColor="#42bfff"
        android:padding="5dp"
        android:textSize="18dp"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/usernameedit"
        android:layout_marginTop="250dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter Your Username"
        android:textColorHint="#1fb805"
        android:padding="5dp"
        android:layout_alignParentRight="true"
        android:textSize="18dp"
        />

    <TextView
        android:id="@+id/usernameedit1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password: "
        android:textColor="#42bfff"
        android:padding="5dp"
        android:textSize="18dp"
        android:layout_below="@id/usernameedit"
        android:layout_marginTop="18dp"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/usernametext1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter Your Password"
        android:textColorHint="#1fb805"
        android:padding="5dp"
        android:textSize="18dp"
        android:inputType="numberPassword"
        android:layout_below="@id/usernametext"
        android:layout_alignParentRight="true"
        android:layout_marginTop="18dp"

        />

    <Button
        android:id="@+id/button2"
        android:layout_below="@id/usernameedit1"
        android:layout_alignParentRight="true"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:textSize="18dp"
        android:textColor="#42bfff"
        android:background="#1E3D3D"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/button1"
        android:layout_below="@id/usernametext1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGESTER"
        android:textSize="18dp"
        android:textColor="#42bfff"
        android:background="#1E3D3D"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        />


    <Button
        android:layout_marginTop="240dp"
        android:layout_below="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textColor="#D03248"
        android:background="#1E3D3D"
        android:text="FORGET"
        android:textStyle="bold"
        />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="171dp"
        android:layout_height="182dp"
        app:srcCompat="@drawable/ic_launcher_foreground" />

</RelativeLayout>
